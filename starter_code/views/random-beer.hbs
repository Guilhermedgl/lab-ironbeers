<div class="beer-detail-container">
	<div>
		{{#if beer.image_url}}
			<img src={{beer.image_url}} alt="beer-img" width="150px">
			{{else}}
			<img src="https://user-images.githubusercontent.com/24848110/33519396-7e56363c-d79d-11e7-969b-09782f5ccbab.png" alt="beer-img" width="150px">
		{{/if}}
	</div>
	<div class="beer-detail-description">
		<h2>{{beer.name}}</h2>
		<h4>{{beer.tagline}}</h4>
		<p>{{beer.description}}</p>
		<h4>Food Pairing</h4>
		<ul>
			{{#each beer.food_pairing}}
			<li>{{this}}</li>
			{{/each}}
		</ul>
		<p><strong>Brewers Tips: </strong>{{beer.brewers_tips}}</p>
	</div>
</div>